{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  },
  "include": ["src/*"]
}
